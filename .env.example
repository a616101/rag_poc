# Application Settings
APP_NAME=Chatbot RAG API
APP_VERSION=0.1.0
DEBUG=False

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=True

# CORS Settings (comma-separated)
CORS_ORIGINS_STR=http://localhost:3000,http://localhost:8000

# Logging Settings
LOG_LEVEL=INFO
LOG_TO_CONSOLE=True
LOG_TO_FILE=False
LOG_FILE_PATH=logs/app.log
LOG_ROTATION=100 MB
LOG_RETENTION=30 days
LOG_COLORIZE_FILE=False

# Performance Settings
WORKERS=1
MAX_CONNECTIONS=1000
BACKLOG=2048
KEEPALIVE_TIMEOUT=65

# Qdrant Vector Database Settings
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=
# For local development using Docker, use: http://qdrant:6333
# For local development without Docker, use: http://localhost:6333
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION_NAME=documents

# OpenAI Compatible LLM Settings (LMStudio)
OPENAI_API_BASE=http://192.168.50.152:1234/v1
OPENAI_API_KEY=lm-studio
EMBEDDING_MODEL=text-embedding-embeddinggemma-300m-qat
EMBEDDING_DIMENSION=768
CHAT_MODEL=openai/gpt-oss-20b
CHAT_TEMPERATURE=0.7
CHAT_MAX_TOKENS=2000

# Document Processing Settings
CHUNK_SIZE=500
CHUNK_OVERLAP=50
DEFAULT_DOCS_PATH=rag_test_data/docs

# Input Validation & Security Settings
ENABLE_INPUT_GUARD=True
MAX_QUESTION_LENGTH=1000
ENABLE_RELEVANCE_CHECK=True
ENABLE_INJECTION_DETECTION=True
